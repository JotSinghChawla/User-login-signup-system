<div class="container-fluid row">
    <div class="mt-4 text-center col-12">
        <h1 class="text-center">Edit your profile</h1>
    </div>
  
    <div class="col-8 offset-1">
      <%= form_with(model: @user, local: true, url: profile_edit_profile_path, method: :patch, class: 'form-horizontal') do |f| %>

        <div class="form-group row">  
            <%= f.label :profile_image, class: 'col-3' %>
            <%= f.file_field :profile_image, class: 'col-3', onchange: "readURL(this);" %>
        </div>

        <div class="form-group row">  
            <%= f.label :email, class: 'col-3' %>
            <%= f.email_field :email, class: 'form-control col-3', autofocus: true %>
        </div>
        
        <div class="form-group row">  
            <%= f.label :name, class: 'col-3' %>
            <%= f.text_field :name, class: 'form-control col-3' %>
        </div>

        <div class="form-group row">  
            <%= f.label :mobile_number, class: 'col-3' %>
            <%= f.telephone_field :mobile, class: 'form-control col-3' %>
        </div>
        
        <div class="form-group row">  
            <%= f.label :date_of_birth, class: 'col-3' %>
            <%= f.date_field :dob, class: 'form-control col-3' %>
        </div>
      
        <%= f.submit 'Update', class: 'btn btn-success' %>
        <%= link_to 'Cancel', '/', class: 'btn btn-danger text-white' %>
    
      <% end %>
    </div>
    
    <div class="col-3">
        <% if @user.profile_image.attached? %>
            <img src="<%= url_for(@user.profile_image) %>" id="preview" alt="profile image" class="img-thumbnail" width="200" height="200">
        <% else %>
            <img src="#" id="preview" alt="profile image" class="img-thumbnail" width="200" height="200">
        <% end %>
    </div>
</div>

<div class="container">
    <div class="mt-4">
        <h1 class="text-center">Create new account</h1>
    </div>
      <h6> <%= @user.inspect %> </h6>
      <%= form_with(model: @user, url: account_signup_path,   class: 'form-horizontal') do |f| %>

        
        <% if @new_user && @new_user.errors.any? %>
            <div id="error_explanation">
            <h2><%= pluralize(@new_user.errors.count, "error") %> prohibited this employee from being saved:</h2>
        
            <ul>
            <% @new_user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
            </ul>
            </div>
        <% end %>

        <div class="form-group row">  
            <%= f.label :email, class: 'col-2' %>
            <%= f.email_field :email, class: 'form-control col-3', autofocus: true %>
        </div>
        
        <div class="form-group row">  
            <%= f.label :name, class: 'col-2' %>
            <%= f.text_field :name, class: 'form-control col-3' %>
        </div>

        <div class="form-group row">  
            <%= f.label :mobile_number, class: 'col-2' %>
            <%= f.telephone_field :mobile, class: 'form-control col-3' %>
        </div>
        
        <div class="form-group row">  
            <%= f.label :date_of_birth, class: 'col-2' %>
            <%= f.date_field :dob, class: 'form-control col-3' %>
        </div>
        
        <div class="form-group row">  
            <%= f.label :password, class: 'col-2' %>
            <%= f.password_field :password, class: 'form-control col-3' %>
        </div>
         
        <div class="form-group row">  
            <%= f.label :confirm_password, class: 'col-2' %>
            <%= f.text_field :confirm_password, class: 'form-control col-3' %>
        </div>

        <%= f.submit 'Register', class: 'btn btn-success' %>
        <%= link_to 'Cancel', '/', class: 'btn btn-danger text-white' %>
    
    <% end %>
</div>